#include <stdio.h>

#include<stdlib.h>

#define MAX 5



int main() {

    int requests[MAX] = {98, 183, 37, 122, 14};

    int total_head_movements = 0, initial_position = 50;



    printf("Disk Scheduling using FCFS\n");

    printf("Initial position: %d\n", initial_position);

    for (int i = 0; i < MAX; i++) {

        printf("Move from %d to %d\n", initial_position, requests[i]);

        total_head_movements += abs(requests[i] - initial_position);

        initial_position = requests[i];

    }



    printf("Total head movements: %d\n", total_head_movements);

    return 0;

}
