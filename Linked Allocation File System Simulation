#include <stdio.h>
#include <stdlib.h>

struct Block {
    int blockNumber;
    struct Block* next;
};

struct Block* createBlock(int blockNumber) {
    struct Block* newBlock = (struct Block*)malloc(sizeof(struct Block));
    newBlock->blockNumber = blockNumber;
    newBlock->next = NULL;
    return newBlock;
}

void displayFile(struct Block* start) {
    printf("File blocks: ");
    while (start != NULL) {
        printf("%d -> ", start->blockNumber);
        start = start->next;
    }
    printf("NULL\n");
}

int main() {
    int n, block;

    printf("Enter the number of blocks in the file: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("No blocks to allocate.\n");
        return 0;
    }

    struct Block *start = NULL, *end = NULL;
    printf("Enter the block numbers: ");
    for (int i = 0; i < n; i++) {
        scanf("%d", &block);
        struct Block* newBlock = createBlock(block);
        if (start == NULL) {
            start = newBlock;
            end = newBlock;
        } else {
            end->next = newBlock;
            end = newBlock;
        }
    }

    displayFile(start);

    struct Block* temp;
    while (start != NULL) {
        temp = start;
        start = start->next;
        free(temp);
    }

    return 0;
}
