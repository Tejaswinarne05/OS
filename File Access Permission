#include <stdio.h>
#include <stdlib.h>

int isPageInFrame(int frames[], int frameCount, int page) {
    for (int i = 0; i < frameCount; i++) {
        if (frames[i] == page) {
            return i; 
        }
    }
    return -1; 
}

void displayFrames(int frames[], int frameCount) {
    for (int i = 0; i < frameCount; i++) {
        if (frames[i] != -1) {
            printf("%d ", frames[i]);
        } else {
            printf("- ");
        }
    }
    printf("\n");
}

int main() {
    int pageCount, frameCount;

    printf("Enter the number of pages: ");
    scanf("%d", &pageCount);

    int pages[pageCount];
    printf("Enter the page reference sequence: ");
    for (int i = 0; i < pageCount; i++) {
        scanf("%d", &pages[i]);
    }

    printf("Enter the number of frames: ");
    scanf("%d", &frameCount);

    int frames[frameCount];
    int usage[frameCount]; 
    for (int i = 0; i < frameCount; i++) {
        frames[i] = -1; 
        usage[i] = 0;   
    }

    int pageFaults = 0;

    printf("\nFrame status after each page reference:\n");
    for (int i = 0; i < pageCount; i++) {
        int page = pages[i];
        int index = isPageInFrame(frames, frameCount, page);

        if (index == -1) { 
            pageFaults++;

            
            int lruIndex = 0;
            for (int j = 1; j < frameCount; j++) {
                if (usage[j] < usage[lruIndex]) {
                    lruIndex = j;
                }
            }

            
            frames[lruIndex] = page;
            usage[lruIndex] = i; 
        } else {
            
            usage[index] = i;
        }

        displayFrames(frames, frameCount);
    }

    printf("\nTotal page faults: %d\n", pageFaults);

return 0;
}
