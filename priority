#include <stdio.h>
int main(){
    int n,i,j;
    printf("enter the number of process:");
    scanf("%d",&n);
    
    int bt[n],wt[n],tt[n],p[n],pr[n];
    int awt=0,atat=0;
    printf("enter the burst time for all processs:\n");
    for( i=0;i<n;i++){
    printf("p - burst%d:",i+1);
    scanf("%d",&bt[i]);
    printf("pr - priority %d:",i+1);
    scanf("%d",&pr[i]);
    p[i]=i+1;
    }
    for(i=0;i<n-1;i++){
        for(j=i+1;j<n;j++){
            if(pr[i]>pr[j]){
                int te=pr[i];
                pr[i]=pr[j];
                pr[j]=te;
                
                int temp=bt[i];
                bt[i]=bt[j];
                bt[j]=temp;
                
                int t=p[i];
                p[i]=p[j];
                p[j]=t;
            }
        }
    }
    wt[0]=0;
    for(i=1;i<n;i++){
    wt[i]=wt[i-1]+bt[i-1];
    }
    
    for(i=0;i<n;i++){
    tt[i]=bt[i]+wt[i];
    }
    printf("\n process\t bt\t wt\t tt\t\n");
    for(i=0;i<n;i++){
    printf("%d\t%d\t%d\t%d\n ",p[i],pr[i],bt[i],wt[i],tt[i]);
    awt+=wt[i];
    atat+=tt[i];
    }
    printf("\nAverage waiting time %.2f",(float)awt/n);
    printf("\n Average turn around time %.2f",(float)atat/n);
    return 0;
}
